<div class="container col-sm-12 row">
    <div class="container col-sm-3">
        
            {{#each burger}}
            <span id="card"  class="card text-center mt-4">
                <p><span class="label">ID: </span> {{this.id}}</p>
                <p><span class="label">Burger Name: </span> {{this.burger_name}}</p>
                <button type="button" class="btn btn-danger btn-sm"> Devoured</button>
            </span>
            {{/each}}
        
    </div>

    <div class="container col-sm-3 text-center mt-5">
        <h1 class="text-danger">Ray's Burger</h1>
        <img id="main_img" src="assets/img/burger.png" alt="burger image">
        <form>
            <div class="form-group">
                <label for="new_burger">Enter Name of Your Burger</label>
                <input class="form-control" id="new_burger" placeholder="YAMMMMMMMMMMMMMMMMMMMM! ">
            </div>
            <button formaction="/ray" type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <div class="container col-sm-3">
        
    </div>
</div>






