<div class="container col-sm-12">
    <div class="container col-sm-3 text-center mt-5">
        <h1>Ray's Burger</h1>
        <img id="main_img" src="assets/img/burger.png" alt="burger image">
        <form action="burger/create" method="POST">
            <div class="form-group">
                <label for="new_burger">Enter Name of Your Burger</label>
                <input class="form-control" id="new_burger" name="burger_name" placeholder="YAMMMMMMMMMMMMMMMMMMMM! ">
            </div>
            <button id="submit-button" type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</div>

<div class="container col-sm-12 row">
    <div class="col-sm-4">
        <h3 class="submitFont">Ready to Devour</h3>
        <div id="burgersAvailable">
            {{#each burgers}}
            {{#unless devoured}}
            <form action="burger/eat/{{id}}" method="POST">
                <span class="input-group">
                    <label class="form-control">{{burger_name}}</label>
                    <p class="input-group-btn">
                        <button class="btn btn-danger devour-button" type="submit">Devour It!</button>
                    </p>
                </span>
            </form>
            {{/unless}}
            {{/each}}
        </div>
    </div>
    <div class="col-sm-4"></div>

    <div class="col-sm-4">
        <h3 class="submitFont">Devoured</h3>
        <div id="alreadyEaten">
            {{#each burgers}}
            {{#if this.devoured}}
            <div class="input-group">
                <span>
                    <lable class="form-control">{{this.burger_name}}</lable>
                </span>

            </div>
            {{/if}}
            {{/each}}

        </div>
    </div>
</div>

